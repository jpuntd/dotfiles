### fzf configuration

# Setting fd as the default source for fzf
export FZF_DEFAULT_COMMAND='fd --type f'
# fzf ctrl-t and alt-c behavior
# export FZF_CTRL_T_COMMAND="fd --exclude \".git\" . $HOME"
export FZF_ALT_C_COMMAND="fd -t d --exclude \".git\" --exclude \"node_modules\" . $HOME"

# fzf single quote tab completion behavior
# export FZF_COMPLETION_TRIGGER="'"

_fzf_compgen_path() {
fd --type f --hidden --follow --exclude .git . "$1"
}
_fzf_compgen_dir() {
fd --type d . "$1"
}

nr() {
  local task
  task=$(node --eval="Object.entries(require('./package.json').scripts).map(([k,v])=>console.log(k,'  -  ',v))" | 
  fzf --delimiter='  -  ' --nth=1 | 
  sed 's/ \- .*$//') && npm run $task
}

